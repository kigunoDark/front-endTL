<%-include('./layouts/navbar.ejs')%>;
<div class="block">
        <h1 class="text-center">Водители</h1>
        <table class="table table-bordered">
            <caption>  Водители с автомобилем</caption>
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Телефон</th>
                    <th scope="col">Email</th>
                    <th scope="col">Автомобили</th>
                    <th scope="col">Удалить</th>
                    <th scope="col">Изменить</th>
                </tr>
            </thead>
            <tbody>
                <% for (owner of with_car) { %>
                    <tr>
                        <th> <%=owner.id %> </th>
                        <td> <%=owner.name %> </td>
                        <td> <%=owner.phone%> </td>
                        <td> <%= owner.email %> </td>
                        <td> <%= owner.model %> </td>
                        <td> 
                            <form action="/delete-owner" method="POST">
                                <input type="text" class="hidden" name="car_id" value="<%= owner.id%>"/>
                                <button type="submit" class="btn btn-outline-secondary"><i class="far fa-trash-alt"></i></button>
                            </form>
                        </td>
                        <td> <button type="button" class="btn btn-outline-success"><i class="far fa-edit"></i></button></td>
                    </tr>
                <% } %>     
            </tbody>
        </table>
        <%-include('./modules/addOwnerMod.ejs')%>
    </div>


<%-include('./layouts/footer.ejs')%>;